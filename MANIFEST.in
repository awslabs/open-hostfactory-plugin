# Include license and readme
include LICENSE
include README.md

# Include requirements
include requirements.txt
include requirements-dev.txt

# Include configuration files
include config/config.json
include config/config.example.json
recursive-include config *.json

# Include monitoring configurations
recursive-include monitoring/prometheus *.yml
recursive-include monitoring/grafana/provisioning *.yml *.json

# Include documentation
recursive-include docs *.rst *.py *.bat *.txt *.md
recursive-include docs/_static *
recursive-include docs/_templates *

# Include test files
recursive-include tests *.py
recursive-include tests/data *
recursive-include tests/fixtures *

# Include type stubs
recursive-include src *.pyi

# Include shell scripts
include *.sh
recursive-include scripts *.sh

# Include configuration files
include .pylintrc
include .bandit.yaml
include mypy.ini
include pytest.ini
include .pre-commit-config.yaml

# Exclude development and temporary files
recursive-exclude * __pycache__
recursive-exclude * *.py[cod]
recursive-exclude * *.so
recursive-exclude * .DS_Store
recursive-exclude * .env
recursive-exclude * .venv
recursive-exclude * *.log
recursive-exclude * *.db
recursive-exclude * .git
recursive-exclude * .tox
recursive-exclude * .coverage
recursive-exclude * htmlcov
recursive-exclude * build
recursive-exclude * dist
recursive-exclude * *.egg-info
