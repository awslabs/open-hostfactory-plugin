[flake8]
max-line-length = 88
extend-ignore = E203,W503
select = E,W,F,C,B,D
exclude = 
    .git,
    __pycache__,
    .venv,
    test-env,
    build,
    dist,
    *.egg-info,
    .tox,
    .coverage,
    .coverage.*,
    .cache,
    nosetests.xml,
    coverage.xml,
    *.cover,
    *.log,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    tests/*:D100,D101,D102,D103,D104
    __init__.py:F401
