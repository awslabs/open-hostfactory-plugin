{
  "Type": "maintain",
  "TargetCapacitySpecification": {
    "TotalTargetCapacity": "{{ requested_count }}",
    "OnDemandTargetCapacity": "{{ on_demand_capacity | default((requested_count * 0.6) | round | int) }}",
    "SpotTargetCapacity": "{{ spot_capacity | default((requested_count * 0.4) | round | int) }}",
    "DefaultTargetCapacityType": "on-demand"
  },
  "LaunchTemplateConfigs": [
    {
      "LaunchTemplateSpecification": {
        "LaunchTemplateId": "{{ web_tier_launch_template_id }}",
        "Version": "{{ web_tier_launch_template_version | default('$Latest') }}"
      },
      "Overrides": [
        {"InstanceType": "m6i.xlarge", "WeightedCapacity": 1},
        {"InstanceType": "m6a.2xlarge", "WeightedCapacity": 2},
        {"InstanceType": "m5.4xlarge", "WeightedCapacity": 4},
        {"InstanceType": "m5n.xlarge", "WeightedCapacity": 1},
        {"InstanceType": "m5a.2xlarge", "WeightedCapacity": 2},
        {"InstanceType": "m5d.4xlarge", "WeightedCapacity": 4}
      ]
    },
    {
      "LaunchTemplateSpecification": {
        "LaunchTemplateId": "{{ app_tier_launch_template_id }}",
        "Version": "{{ app_tier_launch_template_version | default('$Latest') }}"
      },
      "Overrides": [
        {"InstanceType": "r6i.xlarge", "WeightedCapacity": 1},
        {"InstanceType": "r6a.2xlarge", "WeightedCapacity": 2},
        {"InstanceType": "r5.4xlarge", "WeightedCapacity": 4},
        {"InstanceType": "r5n.8xlarge", "WeightedCapacity": 8},
        {"InstanceType": "r5a.xlarge", "WeightedCapacity": 1},
        {"InstanceType": "r5d.2xlarge", "WeightedCapacity": 2},
        {"InstanceType": "m6i.2xlarge", "WeightedCapacity": 2},
        {"InstanceType": "m5.4xlarge", "WeightedCapacity": 4},
        {"InstanceType": "m5n.8xlarge", "WeightedCapacity": 8}
      ]
    },
    {
      "LaunchTemplateSpecification": {
        "LaunchTemplateId": "{{ db_tier_launch_template_id }}",
        "Version": "{{ db_tier_launch_template_version | default('$Latest') }}"
      },
      "Overrides": [
        {"InstanceType": "r6i.2xlarge", "WeightedCapacity": 2},
        {"InstanceType": "r6a.4xlarge", "WeightedCapacity": 4},
        {"InstanceType": "r5.8xlarge", "WeightedCapacity": 8},
        {"InstanceType": "r5n.12xlarge", "WeightedCapacity": 12},
        {"InstanceType": "r5a.16xlarge", "WeightedCapacity": 16},
        {"InstanceType": "r5d.24xlarge", "WeightedCapacity": 24},
        {"InstanceType": "r6i.xlarge", "WeightedCapacity": 1},
        {"InstanceType": "r5.4xlarge", "WeightedCapacity": 4},
        {"InstanceType": "r5n.8xlarge", "WeightedCapacity": 8}
      ]
    }
  ],
  "OnDemandOptions": {
    "AllocationStrategy": "prioritized"
  },
  "SpotOptions": {
    "AllocationStrategy": "price-capacity-optimized",
    "InstanceInterruptionBehavior": "terminate",
    "MaintenanceStrategies": {
      "CapacityRebalance": {
        "ReplacementStrategy": "launch"
      }
    }
  },
  "ReplaceUnhealthyInstances": true,
  "TagSpecifications": [{
    "ResourceType": "fleet",
    "Tags": [
      {"Key": "Name", "Value": "hpc-multi-tier-{{ request_id }}"},
      {"Key": "RequestId", "Value": "{{ request_id }}"},
      {"Key": "TemplateId", "Value": "{{ template_id }}"},
      {"Key": "CreatedBy", "Value": "{{ package_name }}"},
      {"Key": "Architecture", "Value": "multi-tier"},
      {"Key": "WorkloadType", "Value": "hpc"},
      {"Key": "AllocationStrategy", "Value": "price-capacity-optimized"}
    ]
  }]
}
